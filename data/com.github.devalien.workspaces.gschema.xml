<?xml version="1.0" encoding="UTF-8"?>

<schemalist>
    <schema path="/com/github/devalien/workspaces/" id="com.github.devalien.workspaces">
        <key name="pos-x" type="i">
            <default>360</default>
            <summary>Horizontal position</summary>
            <description>Saved horizontal position of main window</description>
        </key>
        <key name="pos-y" type="i">
            <default>640</default>
            <summary>Vertical position</summary>
            <description>Saved vertical position of main window</description>
        </key>
        <key name="window-width" type="i">
            <default>1040</default>
            <summary>Window width</summary>
            <description>Saved width of main window</description>
        </key>
        <key name="window-height" type="i">
            <default>400</default>
            <summary>Window height</summary>
            <description>Saved height of main window</description>
        </key>
        <key name="pane-position" type="i">
            <default>255</default>
            <summary>Most recent pane position</summary>
            <description>Most recent pane position</description>
        </key>
        <key type="b" name="first-run">
            <default>true</default>
            <summary>Whether this is the first time that Workspaces has opened</summary>
            <description>Used to determine whether or not to perform initial install steps</description>
        </key>
        <key name="close-on-launch" type="b" >
            <default>false</default>
            <summary>Close window after launching an app</summary>
            <description>Used to automatically close the quick launch window after opening an app or workspace</description>
        </key>
    </schema>
</schemalist>